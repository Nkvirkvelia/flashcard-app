{
  "manifest_version": 3,
  "name": "Flashcard Quick Add",
  "version": "1.0",
  "description": "Quickly create flashcards from selected text.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://localhost/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],
  "icons": {
    "48": "flash-card.png"
  }
}